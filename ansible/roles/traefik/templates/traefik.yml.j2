api:
  dashboard: true
  insecure: true # Accessible via traefik.mwakilishi.com per your dynamic.yml

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https

  websecure:
    address: ":443"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
  file:
    # This points to the new standardized path
    filename: /etc/traefik/dynamic.yml
    watch: true

certificatesResolvers:
  route53:
    acme:
      email: your-email@mwakilishi.com  # Replace with your actual email
      storage: /etc/traefik/acme.json
      dnsChallenge:
        provider: route53
        # AWS credentials are passed via environment variables in docker-compose
